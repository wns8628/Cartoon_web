<!-- views/posts/index.ejs -->

<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body class="body" onload ="main_ajax_nowload()">
  <% include ../partials/nav %>
  <div class="user_body">
    <div class="upmain_body container mx-auto row">
    <div class="row container upmangabody">
      <div class="col-sm-12 newupdate">
        <suv class="suv">완결만화</suv>
      </div>
           <% lists.forEach(function(list) { %>
              <div class="col-sm-2 upmanlayout">
                <div class="manhwalist_each">
                  <a class="manhwalist_name" href="/toon/<%=list.name %>">
                      <img src="<%=list.photo %>" alt="" class="manhwalist_logo">
                      <%=list.name %>
                  </a>
                </div>
              </div>
          <% }) %>

    </div>

    <div class="mx-auto">
         <nav aria-label="Page navigation example" id="Pagenavigation">
           <ul class="pagination">
             <%
             var offset = 3;
             var partialQuery;
             if(urlQuery) partialQuery = "&"+urlQuery.replace(/page=(.*?)(&|$)/ig,"");
             %>
             <li class="page-item">
               <a class="page-link title" href="/toon/finish_manga?page=<%= 1 %><%= partialQuery %>" aria-label="Previous">
                 <span aria-hidden="true">&laquo;</span>
                 <span class="sr-only">Previous</span>
               </a>
             </li>
             <% for(i=1;i<=maxPageM;i++){ %>
               <% if(i<=offset || i>maxPageM-offset || (i>=page-(offset-1) && i<=page+(offset-1))){ %>
                 <% if(i != page){ %>
                   <li class="page-item"><a class="page-link title" href="/toon/finish_manga?page=<%= i %><%= partialQuery %>"> <%= i %> </a></li>
                   <% } else { %>
                     <li class="page-item"> <a href="#" class="page-link title"><b><%= i %></b></a></li>
                     <% } %>
                     <% } else if(i == offset+1 || i == maxPageM-offset){ %>
                       <li class="page-item"><a href="#" class="page-link title">...</a></li>
                       <% } %>
                       <%}%>
             <li class="page-item">
               <a class="page-link title" href="/toon/finish_manga?page=<%= maxPageM %><%= partialQuery %>" aria-label="Next">
                 <span aria-hidden="true">&raquo;</span>
                 <span class="sr-only">Next</span>
               </a>
             </li>

           </ul>
         </nav>
     </div>


  </div>

<!--  -->




</div>
   <footer>
     <% include ../partials/footer %>
   </footer>
 </body>
</html>
